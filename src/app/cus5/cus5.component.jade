              option(value="4") CENTRO
              option(value="5") EJE CAFETERO
              option(value="6") OCCIDENTE
              option(value="7") SANTANDER
              option(value="8") SUR
        .form-group
          label.control-label.col-sm-4 Clase de pretención
          .col-sm-6
            select#clasePreten.form-control.not-number
              option(selected="selected", value="Seleccione la clase de pretensión") Seleccione la clase de pretensión
              option(value="1") INVALIDEZ
              option(value="2") VEJEZ
              option(value="3") SOBREVIVIENTES
              option(value="4") AUXILIOS FUNERARIOS
              option(value="5") AFILIACIÓN
              option(value="6") MORA PATRONAL
              option(value="7") CONFLICTOS DE COMPETENCIA
              option(value="8") COLPENSIONES PATRONO
              option(value="9") ISS PATRONO
              option(value="10") OTROS
        .form-group
          label.control-label.col-sm-4 Estado del proceso
          .col-sm-6
            select#clasePreten.form-control.not-number
              option(selected="selected", value="Seleccione el estado del proceso") Seleccione el estado del proceso
              option(value="1") Duplicado
              option(value="2") Notificación por ejecutivo
              option(value="3") Pleito pendiente
              option(value="4") Cosa juzgada
        .form-group
          label.control-label.col-sm-4.empty-input
        .form-group
          label.control-label.col-sm-4 CC demandante
          .col-sm-6
            input#codDemandante.form-control.number(placeholder="Digite la cédula del demandante" maxlength="25")
