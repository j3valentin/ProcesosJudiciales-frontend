.container
  form.form-horizontal(role="form")
    .col-sm-6
      fieldset
        legend Búsqueda avanzada / Filtros de consulta  
        .form-group
          label.control-label.col-sm-4 Fecha inicio notificación
          .col-sm-6
            input#fechaIniNotif.form-control(placeholder="Ingrese fecha inicio notificación")
        .form-group
          label.control-label.col-sm-4 Nombre despacho inicial
          .col-sm-6
            input#nomDespaIni.form-control.not-number(placeholder="Digite el nombre del despacho inicial")
        .form-group
          label.control-label.col-sm-4 Departamento juzgado
          .col-sm-6
            select#depJuzgado.form-control.not-number
              option(selected="selected", value="Seleccione el departamento juzgado") Seleccione un departamento juzgado
              option(value="1") ACCION DE NULIDAD Y RESTABLECIMIENTO DEL DERECHO
              option(value="2") ACCION DE REPARACION DIRECTA
              option(value="3") ACCION DE CUMPLIMIENTO
              option(value="4") ACCION POPULAR
              option(value="5") EXTENSION DE JURISPRUDENCIA
              option(value="6") NULIDAD SIMPLE
              option(value="7") REPARACION DIRECTA
              option(value="8") ADMINISTRATIVO EJECUTIVO
              option(value="9") EJECUTIVO LABORAL
              option(value="10") ORDINARIO LABORAL DE UNICA INSTANCIA
              option(value="11") ORDINARIO LABORAL DE PRIMERA INSTANCIA
        .form-group
          label.control-label.col-sm-4 Tipo de proceso
          .col-sm-6
            select#tipoProces.form-control.not-number
              option(selected="selected", value="Seleccione un tipo de proceso") Seleccione un tipo de proceso
              option(value="1") ACCION DE NULIDAD Y RESTABLECIMIENTO DEL DERECHO
              option(value="2") ACCION DE REPARACION DIRECTA
              option(value="3") ACCION DE CUMPLIMIENTO
              option(value="4") ACCION POPULAR
              option(value="5") EXTENSION DE JURISPRUDENCIA
              option(value="6") NULIDAD SIMPLE
              option(value="7") REPARACION DIRECTA
              option(value="8") ADMINISTRATIVO EJECUTIVO
              option(value="9") EJECUTIVO LABORAL
              option(value="10") ORDINARIO LABORAL DE UNICA INSTANCIA
              option(value="11") ORDINARIO LABORAL DE PRIMERA INSTANCIA
        .form-group
          label.control-label.col-sm-4 Pretención principal
          .col-sm-6
            select#pretenPrincipal.form-control.not-number
              option(selected="selected", value="Seleccione la pretención principal") Seleccione la pretención principal
              option(value="1") INVALIDEZ
              option(value="2") VEJEZ
              option(value="3") SOBREVIVIENTES
              option(value="4") AUXILIOS FUNERARIOS
              option(value="5") AFILIACIÓN
              option(value="6") MORA PATRONAL
              option(value="7") CONFLICTOS DE COMPETENCIA
              option(value="8") COLPENSIONES PATRONO
              option(value="9") ISS PATRONO
              option(value="10") OTROS
        .form-group
          label.control-label.col-sm-4 Código reparto
          .col-sm-6
            input#codReparto.form-control.not-number(placeholder="Digite el código de reparto")
        .form-group
          label.control-label.col-sm-4 N° Bizagi - Caso defensa judicial
          .col-sm-6
            input#codBizagi.form-control.not-number(placeholder="Digite el número Bizagi" maxlength="12")
        .form-group
          label.control-label.col-sm-4 Nombre demandante
          .col-sm-6
            input#nomDemandante.form-control.not-number(placeholder="Digite el nombre del demandante" maxlength="300")
        .form-group
          label.control-label.col-sm-4 23 dígitos de proceso
          .col-sm-6
            input#cod23Digitos.form-control.number(placeholder="Digite los 23 dígitos del proceso" maxlength="23")
    .col-sm-6
      fieldset
        .form-group
          label.control-label.col-sm-4 Fecha fin notificación
          .col-sm-6
            input#fechaFinNotif.form-control(placeholder="Ingrese fecha inicio notificación")
        .form-group
          label.control-label.col-sm-4.empty-input
        .form-group
          label.control-label.col-sm-4 Ciudad juzgado
          .col-sm-6
            select#ciudadJuzgado.form-control.not-number
              option(selected="selected", value="Seleccione la ciudad juzgado") Seleccione la ciudad juzgado
              option(value="1") ANTIOQUIA
              option(value="2") BOGOTA
              option(value="3") CARIBE
              option(value="4") CENTRO
              option(value="5") EJE CAFETERO
              option(value="6") OCCIDENTE
              option(value="7") SANTANDER
              option(value="8") SUR
        .form-group
          label.control-label.col-sm-4 Regional
          .col-sm-6
            select#tipoProces.form-control.not-number
              option(selected="selected", value="Seleccione la regional") Seleccione la regional
              option(value="1") ANTIOQUIA
              option(value="2") BOGOTA
