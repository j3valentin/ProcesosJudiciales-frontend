//CUS005 Búsqueda avanzada - Nota: Se recomienda un modal
.container
  form.form-horizontal(role='form')
    .col-sm-6
      fieldset
        legend Búsqueda avanzada / Filtros de consulta
        .form-group
          label.control-label.col-sm-4(for='fecha_inicio_notificacion') Fecha inicio notificación
          .col-sm-6
            input#fecha_inicio_notificacion.form-control(placeholder='aaaa-mm-dd')
        .form-group
          label.control-label.col-sm-4(for='nombre_despacho_inicial') Nombre despacho inicial
          .col-sm-6
            input#nombre_despacho_inicial.form-control.not-number(placeholder='Digite el nombre del despacho inicial')
        .form-group
          label.control-label.col-sm-4(for='departamento_juzgado') Departamento juzgado
          .col-sm-6
            select#departamento_juzgado.form-control.not-number
              option(value='') Seleccione un departamento juzgado
              option(value="1") ACCION DE NULIDAD Y RESTABLECIMIENTO DEL DERECHO
              option(value="2") ACCION DE REPARACION DIRECTA
              option(value="3") ACCION DE CUMPLIMIENTO
              option(value="4") ACCION POPULAR
              option(value="5") EXTENSION DE JURISPRUDENCIA
              option(value="6") NULIDAD SIMPLE
              option(value="7") REPARACION DIRECTA
              option(value="8") ADMINISTRATIVO EJECUTIVO
              option(value="9") EJECUTIVO LABORAL
              option(value="10") ORDINARIO LABORAL DE UNICA INSTANCIA
              option(value="11") ORDINARIO LABORAL DE PRIMERA INSTANCIA
        .form-group
          label.control-label.col-sm-4(for='tipo_de_proceso') Tipo de proceso
          .col-sm-6
            select#tipo_de_proceso.form-control.not-number
              option(value='') Seleccione un tipo de proceso
              option(value="1") ACCION DE NULIDAD Y RESTABLECIMIENTO DEL DERECHO
              option(value="2") ACCION DE REPARACION DIRECTA
              option(value="3") ACCION DE CUMPLIMIENTO
              option(value="4") ACCION POPULAR
              option(value="5") EXTENSION DE JURISPRUDENCIA
              option(value="6") NULIDAD SIMPLE
              option(value="7") REPARACION DIRECTA
              option(value="8") ADMINISTRATIVO EJECUTIVO
              option(value="9") EJECUTIVO LABORAL
              option(value="10") ORDINARIO LABORAL DE UNICA INSTANCIA
              option(value="11") ORDINARIO LABORAL DE PRIMERA INSTANCIA
        .form-group
          label.control-label.col-sm-4(for='pretencion_principal') Pretención principal
          .col-sm-6
            select#pretencion_principal.form-control.not-number
              option(value='') Seleccione la pretención principal
              option(value="1") INVALIDEZ
              option(value="2") VEJEZ
              option(value="3") SOBREVIVIENTES
              option(value="4") AUXILIOS FUNERARIOS
              option(value="5") AFILIACIÓN
              option(value="6") MORA PATRONAL
              option(value="7") CONFLICTOS DE COMPETENCIA
              option(value="8") COLPENSIONES PATRONO
              option(value="9") ISS PATRONO
              option(value="10") OTROS
        .form-group
          label.control-label.col-sm-4(for='codigo_reparto') Código reparto
          .col-sm-6
            input#codigo_reparto.form-control.not-number(placeholder='Digite el código de reparto')
        .form-group
          label.control-label.col-sm-4(for='bizagi') N° Bizagi - Caso defensa judicial
          .col-sm-6
            input#bizagi.form-control(maxlength='12',
            placeholder='Digite el número Bizagi')
        .form-group
          label.control-label.col-sm-4(for='nombre_demandante') Nombre demandante
          .col-sm-6
            input#nombre_demandante.form-control(maxlength='300', not-number,
              placeholder='Digite el nombre del demandante')
        .form-group
          label.control-label.col-sm-4(for='23_digitos_de_procesos') 23 dígitos de proceso
          .col-sm-6
            input#23_digitos_de_procesos.form-control(maxlength='23', number,
              placeholder='Digite los 23 dígitos del proceso')
    .col-sm-6
      fieldset
        .form-group
          label.control-label.col-sm-4(for='fecha_fin_notificacion') Fecha fin notificación
          .col-sm-6
            input#fecha_fin_notificacion.form-control(placeholder='aaaa-mm-dd')
        .form-group
          label.control-label.col-sm-4.empty-input
        .form-group
          label.control-label.col-sm-4(for='ciudad_juzgado') Ciudad juzgado
          .col-sm-6
            select#ciudad_juzgado.form-control.not-number
              option(value='') Seleccione la ciudad juzgado
              option(value="1") ANTIOQUIA
              option(value="2") BOGOTA
              option(value="3") CARIBE
              option(value="4") CENTRO
              option(value="5") EJE CAFETERO
              option(value="6") OCCIDENTE
              option(value="7") SANTANDER
              option(value="8") SUR
        .form-group
          label.control-label.col-sm-4(for='regional') Regional
          .col-sm-6
            select#regional.form-control.not-number
              option(value='') Seleccione la regional
              option(value="1") ANTIOQUIA
              option(value="2") BOGOTA
              option(value="3") CARIBE
              option(value="4") CENTRO
              option(value="5") EJE CAFETERO
              option(value="6") OCCIDENTE
              option(value="7") SANTANDER
              option(value="8") SUR
        .form-group
          label.control-label.col-sm-4(for='clase_de_pretencion') Clase de pretención
          .col-sm-6
            select#clase_de_pretencion.form-control.not-number
              option(value='') Seleccione la clase de pretensión
              option(value="1") INVALIDEZ
              option(value="2") VEJEZ
              option(value="3") SOBREVIVIENTES
              option(value="4") AUXILIOS FUNERARIOS
              option(value="5") AFILIACIÓN
              option(value="6") MORA PATRONAL
              option(value="7") CONFLICTOS DE COMPETENCIA
              option(value="8") COLPENSIONES PATRONO
              option(value="9") ISS PATRONO
              option(value="10") OTROS
        .form-group
          label.control-label.col-sm-4(for='estado_del_proceso') Estado del proceso
          .col-sm-6
            select#estado_del_proceso.form-control.not-number
              option(value='') Seleccione el estado del proceso
              option(value="1") Duplicado
              option(value="2") Notificación por ejecutivo
              option(value="3") Pleito pendiente
              option(value="4") Cosa juzgada
        .form-group
          label.control-label.col-sm-4.empty-input
        .form-group
          label.control-label.col-sm-4(for='cc_demandante') CC demandante
          .col-sm-6
            input#cc_demandante.form-control.number(maxlength='25', number,
              placeholder='Digite la cédula del demandante' )
  .col-sm-12
